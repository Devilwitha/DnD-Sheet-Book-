<BackgroundSettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Hintergründe"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        ScrollView:
            GridLayout:
                cols: 1
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

                Label:
                    id: transparency_label
                    size_hint_y: None
                    height: 40

                Slider:
                    id: transparency_slider
                    min: 0.1
                    max: 1.0
                    size_hint_y: None
                    height: 40
                    on_value: root.on_transparency_change(self.value)

                BoxLayout:
                    size_hint_y: None
                    height: 40
                    Label:
                        text: "Transparenz an/aus"
                    Switch:
                        id: transparency_switch
                        on_active: root.on_transparency_toggle(self.active)

                Button:
                    text: "Allgemeiner Hintergrund"
                    on_press: root._show_background_chooser('background_path')
                    size_hint_y: None
                    height: 50

                Button:
                    text: "Charaktererstellung Hintergrund"
                    on_press: root._show_background_chooser('cs_creator_background_path')
                    size_hint_y: None
                    height: 50

                Button:
                    text: "Charakterbogen Hintergrund"
                    on_press: root._show_background_chooser('cs_sheet_background_path')
                    size_hint_y: None
                    height: 50

        Button:
            text: "Zurück"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
