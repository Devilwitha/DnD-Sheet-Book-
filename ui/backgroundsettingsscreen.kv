<BackgroundSettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Hintergrund Einstellungen"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: self.minimum_height


            BoxLayout:
                size_hint_y: None
                height: 40
                Label:
                    text: "Allgemeiner Hintergrund anzeigen"
                Switch:
                    id: background_switch
                    on_active: root.on_background_toggle(self.active, 'background_enabled')

            Button:
                text: "Allgemeiner Hintergrund w채hlen"
                size_hint_y: None
                height: 50
                on_press: root.show_background_chooser('background_path')

            BoxLayout:
                size_hint_y: None
                height: 40
                Label:
                    text: "Charaktererstellung Hintergrund anzeigen"
                Switch:
                    id: cs_creator_background_switch
                    on_active: root.on_background_toggle(self.active, 'cs_creator_background_enabled')

            Button:
                text: "Charaktererstellung Hintergrund w채hlen"
                size_hint_y: None
                height: 50
                on_press: root.show_background_chooser('cs_creator_background_path')

            BoxLayout:
                size_hint_y: None
                height: 40
                Label:
                    text: "Charakterbogen Hintergrund anzeigen"
                Switch:
                    id: cs_sheet_background_switch
                    on_active: root.on_background_toggle(self.active, 'cs_sheet_background_enabled')

            Button:
                text: "Charakterbogen Hintergrund w채hlen"
                size_hint_y: None
                height: 50
                on_press: root.show_background_chooser('cs_sheet_background_path')

        BoxLayout:
            size_hint_y: 1.0 # Spacer

        Button:
            text: "Zur체ck"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
