<DMSpielScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "DM Spiel"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        Button:
            id: host_dm_btn
            text: "DM Hosten"
            on_press: root.host_dm()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            id: join_player_btn
            text: "Spieler beitreten"
            on_press: root.join_player()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            id: prepare_dm_btn
            text: "DM Vorbereiten"
            on_press: root.prepare_dm()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            id: load_session_btn
            text: "Sitzung laden"
            on_press: root.load_session()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0

        Button:
            text: "Zur√ºck zu den Optionen"
            on_press: app.change_screen('options')
            size_hint_y: None
            height: 80
            font_size: '20sp'
