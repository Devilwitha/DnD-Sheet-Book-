#:import PlayerCharacterDisplay ui.player_character_display.PlayerCharacterDisplay

<PlayerMainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10

        # Left side: Character Display
        PlayerCharacterDisplay:
            id: character_display
            size_hint_x: 0.4

        # Right side: Log, Summary, and Actions
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            spacing: 10

            Label:
                id: summary_label
                markup: True
                size_hint_y: 0.3
                text_size: self.width, None
                padding: (10, 10)

            Label:
                text: "Log"
                font_size: '20sp'
                size_hint_y: None
                height: 40

            ScrollView:
                size_hint_y: 0.7
                Label:
                    id: log_output
                    text: "Game log will appear here..."
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    markup: True

            GridLayout:
                cols: 2
                size_hint_y: None
                height: 50
                Button:
                    text: "d20 Wurf"
                    on_press: root.roll_d20()
                Button:
                    text: "Schaden w√ºrfeln"
                    on_press: root.roll_damage()

            Button:
                text: "Verbindung trennen"
                on_press: root.handle_disconnect()
                size_hint_y: None
                height: 60
