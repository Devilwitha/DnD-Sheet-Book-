#:import CharacterSheetWidget ui.character_sheet.CharacterSheetWidget

<PlayerMainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10

        # Left side: Character Sheet
        CharacterSheetWidget:
            id: character_sheet_widget
            size_hint_x: 0.7
            manager: root.manager

        # Right side: Log and Summary
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 10

            Label:
                id: summary_label
                markup: True
                size_hint_y: 0.3
                height: self.texture_size[1]
                text_size: self.width, None
                padding: (10, 10)

            Label:
                text: "Log"
                font_size: '20sp'
                size_hint_y: None
                height: 40

            ScrollView:
                size_hint_y: 0.7
                Label:
                    id: log_output
                    text: "Game log will appear here..."
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    markup: True

            Button:
                text: "Verbindung trennen"
                on_press: root.handle_disconnect()
                size_hint_y: None
                height: 60
