<InfoMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Informationen"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        Button:
            text: "Model"
            on_press: root.go_to_screen('model')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            text: "Version"
            on_press: root.go_to_screen('version')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            text: "System"
            on_press: root.go_to_screen('system_info')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0

        Button:
            text: "Zur√ºck"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
