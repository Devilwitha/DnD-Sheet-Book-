
<InfoMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                Label:
                    text: "Informationen"
                    font_size: '28sp'
                    size_hint_y: None
                    height: 60
                Button:
                    text: "Model"
                    on_press: root.go_to_screen('model')
                    size_hint_y: None
                    height: 56
                    font_size: '20sp'
                Button:
                    text: "Version"
                    on_press: root.go_to_screen('version')
                    size_hint_y: None
                    height: 56
                    font_size: '20sp'
                Button:
                    id: system_info_button
                    text: "System"
                    on_press: root.go_to_screen('system_info')
                    size_hint_y: None
                    height: 56
                    font_size: '20sp'
                Widget:
                    size_hint_y: None
                    height: 20
                Button:
                    text: "Zur√ºck"
                    on_press: root.go_back()
                    size_hint_y: None
                    height: 56
                    font_size: '20sp'
