<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Image:
            source: 'logo/logo.png'

        Button:
            text: "Charakter"
            on_press: root.go_to_screen('character_menu')
            size_hint_y: None
            height: '80dp'

        Button:
            text: "DM Spiel"
            on_press: root.go_to_screen('dm_spiel')
            size_hint_y: None
            height: '80dp'

        Button:
            text: "Optionen"
            on_press: root.go_to_screen('options')
            size_hint_y: None
            height: '80dp'
