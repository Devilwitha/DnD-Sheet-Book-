<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Image:
            id: menu_logo_image
            source: '' # Will be set in python

        Button:
            id: btn_charakter
            text: "Charakter"
            on_press: root.go_to_screen('character_menu')
            font_size: '20sp'

        Button:
            id: btn_dmspiel
            text: "DM Spiel"
            on_press: root.go_to_screen('dm_spiel')
            font_size: '20sp'

        Button:
            id: btn_optionen
            text: "Optionen"
            on_press: root.go_to_screen('options')
            font_size: '20sp'
