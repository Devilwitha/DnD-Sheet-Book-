<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Image:
            source: 'logo/logo.png'

        Button:
            text: "Charakter"
            on_press: root.manager.current = 'character_menu'

        Button:
            text: "DM Spiel"
            on_press: root.manager.current = 'dm_spiel'

        Button:
            text: "Optionen"
            on_press: root.switch_to_options()
