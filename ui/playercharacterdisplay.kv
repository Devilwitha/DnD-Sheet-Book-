<PlayerCharacterDisplay>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Label:
        id: name_label
        text: "Character Name"
        font_size: '24sp'
        size_hint_y: None
        height: 40

    Label:
        id: class_label
        text: "Race Class Level"
        size_hint_y: None
        height: 30

    Label:
        id: hp_label
        text: "HP: 0 / 0"
        font_size: '20sp'
        size_hint_y: None
        height: 30

    ScrollView:
        GridLayout:
            id: stats_box
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            spacing: 5
