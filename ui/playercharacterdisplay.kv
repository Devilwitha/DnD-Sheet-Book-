<PlayerCharacterDisplay>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Label:
        id: name_label
        text: "Character Name"
        font_size: '24sp'
        size_hint_y: None
        height: 40

    Label:
        id: class_label
        text: "Race Class Level"
        size_hint_y: None
        height: 30

    Label:
        id: hp_label
        text: "HP: 0 / 0"
        font_size: '20sp'
        size_hint_y: None
        height: 30

    ScrollView:
        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            spacing: 5

            Label:
                text: "Stärke:"
            Label:
                id: strength_label
                text: "10 (+0)"
            Label:
                text: "Geschicklichkeit:"
            Label:
                id: dexterity_label
                text: "10 (+0)"
            Label:
                text: "Konstitution:"
            Label:
                id: constitution_label
                text: "10 (+0)"
            Label:
                text: "Intelligenz:"
            Label:
                id: intelligence_label
                text: "10 (+0)"
            Label:
                text: "Weisheit:"
            Label:
                id: wisdom_label
                text: "10 (+0)"
            Label:
                text: "Charisma:"
            Label:
                id: charisma_label
                text: "10 (+0)"
            Label:
                text: "Rüstungsklasse:"
            Label:
                id: ac_label
                text: "10"
            Label:
                text: "Initiative:"
            Label:
                id: initiative_label
                text: "+0"
            Label:
                text: "Bewegungsrate:"
            Label:
                id: speed_label
                text: "9m"
