<PlayerCharacterDisplay>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Label:
        id: name_label
        font_size: '24sp'
        size_hint_y: None
        height: 40

    Label:
        id: class_label
        size_hint_y: None
        height: 30

    Label:
        id: hp_label
        font_size: '20sp'
        size_hint_y: None
        height: 30

    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: 10

            GridLayout:
                id: stats_box
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 5

                Label:
                    text: "Stärke:"
                Label:
                    id: strength_label
                Label:
                    text: "Geschicklichkeit:"
                Label:
                    id: dexterity_label
                Label:
                    text: "Konstitution:"
                Label:
                    id: constitution_label
                Label:
                    text: "Intelligenz:"
                Label:
                    id: intelligence_label
                Label:
                    text: "Weisheit:"
                Label:
                    id: wisdom_label
                Label:
                    text: "Charisma:"
                Label:
                    id: charisma_label
                Label:
                    text: "Rüstungsklasse:"
                Label:
                    id: ac_label
                Label:
                    text: "Initiative:"
                Label:
                    id: initiative_label
                Label:
                    text: "Bewegungsrate:"
                Label:
                    id: speed_label

            Label:
                text: "Währung"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: currency_box
                cols: 5
                size_hint_y: None
                height: self.minimum_height

            Label:
                text: "Fähigkeiten"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: features_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height

            Label:
                text: "Inventar"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: inventory_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height

            Label:
                text: "Ausrüstung"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: equipment_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height
