<PlayerWaitingScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            id: waiting_label
            text: "Verbindung wird hergestellt..."
            font_size: '24sp'
        Label:
            id: summary_label
            font_size: '16sp'
            text: ""
        Button:
            text: "Verbindung abbrechen"
            on_press: root.network_manager.shutdown()
            size_hint_y: None
            height: 60
