<PlayerWaitingScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        ScrollView:
            size_hint_y: 0.3
            Label:
                id: waiting_label
                text: "Verbindung wird hergestellt..."
                font_size: '24sp'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        Label:
            id: summary_label
            font_size: '16sp'
            text: ""
            size_hint_y: 0.2
        Button:
            text: "Verbindung abbrechen"
            on_press: root.network_manager.shutdown()
            size_hint_y: None
            height: 60
