
<SystemInfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                Label:
                    text: "Systeminformationen"
                    font_size: '30sp'
                    size_hint_y: None
                    height: 60
                Label:
                    id: raspberry_model
                    text: "Modell: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: os_version
                    text: "Betriebssystem: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: cpu_usage
                    text: "CPU-Auslastung: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: cpu_temp
                    text: "CPU-Temperatur: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: memory_usage
                    text: "RAM-Nutzung: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: disk_usage
                    text: "Festplattennutzung: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: resolution
                    text: "Auflösung: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Label:
                    id: folder_size
                    text: "Größe des App-Ordners: "
                    font_size: '18sp'
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: 32
                Widget:
                    size_hint_y: None
                    height: 20
                Button:
                    text: "Zurück"
                    on_press: root.go_back()
                    size_hint_y: None
                    height: 56
                    font_size: '20sp'
