<SystemInfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: "Systeminformationen"
            font_size: '30sp'
            size_hint_y: None
            height: 80
            bold: True

        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10

            Label:
                id: raspberry_model
                text: "Modell: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: os_version
                text: "Betriebssystem: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: cpu_usage
                text: "CPU-Auslastung: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: memory_usage
                text: "RAM-Nutzung: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: disk_usage
                text: "Festplattennutzung: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: resolution
                text: "Auflösung: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

            Label:
                id: folder_size
                text: "Größe des App-Ordners: "
                font_size: '18sp'
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1] + 10

        BoxLayout:
            size_hint_y: 1.0


        Button:
            text: "Zurück"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
