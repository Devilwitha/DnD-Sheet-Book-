<CharacterMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: lbl_header
            text: "Charakter"
            font_size: '28sp'

        Button:
            id: btn_neu
            text: "Neuen Charakter erstellen"
            on_press: root.go_to_screen('creator')
            font_size: '20sp'

        Button:
            id: btn_laden
            text: "Charakter laden"
            on_press: root.show_load_popup()
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0

        Button:
            id: btn_zurueck
            text: "Zur√ºck"
            on_press: root.go_back()
            font_size: '20sp'
