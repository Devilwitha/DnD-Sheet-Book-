<CharacterMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Charakter"
            font_size: '30sp'
            size_hint_y: None
            height: '80dp'

        Button:
            text: "Neuen Charakter erstellen"
            on_press: root.go_to_screen('creator')
            size_hint_y: None
            height: '80dp'
            font_size: '20sp'

        Button:
            text: "Charakter laden"
            on_press: root.show_load_popup()
            size_hint_y: None
            height: '80dp'
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0

        Button:
            text: "Zur√ºck"
            on_press: root.go_back()
            size_hint_y: None
            height: '80dp'
            font_size: '20sp'
