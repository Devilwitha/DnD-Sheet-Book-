<DMLobbyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: lobby_title
            text: "DM Lobby"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        Label:
            text: "Verbundenen Spieler:"
            font_size: '20sp'
            size_hint_y: None
            height: 40

        # This will be populated with connected players later
        ScrollView:
            size_hint_y: 2.0
            GridLayout:
                id: player_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height

        Label:
            text: "Sitzungs-Zusammenfassung:"
            font_size: '20sp'
            size_hint_y: None
            height: 40

        ScrollView:
            size_hint_y: 1.5
            Label:
                id: summary_label
                text: ""
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None

        BoxLayout:
            size_hint_y: 0.5

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 80

            Button:
                text: "Spiel starten"
                on_press: root.start_game()
                font_size: '20sp'

            Button:
                text: "Hintergrund ändern"
                on_press: root.change_background()
                font_size: '20sp'

            Button:
                text: "Zurück"
                on_press: root.go_back()
                font_size: '20sp'
