<PlayerCharacterWidget>:
    orientation: 'vertical'
    spacing: 5
    padding: 5

    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: 10

            # Header
            GridLayout:
                cols: 2
                size_hint_y: None
                height: 120
                Label:
                    id: name_label
                    font_size: '24sp'
                Label:
                    id: class_label
                Label:
                    id: hp_label
                    font_size: '20sp'
                Label:
                    id: weapon_label
                    font_size: '16sp'

            # Stats
            GridLayout:
                id: stats_box
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 5

                Label:
                    text: "St채rke:"
                Label:
                    id: strength_label
                Label:
                    text: "Geschicklichkeit:"
                Label:
                    id: dexterity_label
                Label:
                    text: "Konstitution:"
                Label:
                    id: constitution_label
                Label:
                    text: "Intelligenz:"
                Label:
                    id: intelligence_label
                Label:
                    text: "Weisheit:"
                Label:
                    id: wisdom_label
                Label:
                    text: "Charisma:"
                Label:
                    id: charisma_label
                Label:
                    text: "R체stungsklasse:"
                Label:
                    id: ac_label
                Label:
                    text: "Initiative:"
                Label:
                    id: initiative_label
                Label:
                    text: "Bewegungsrate:"
                Label:
                    id: speed_label

            # Buttons
            GridLayout:
                cols: 2
                size_hint_y: None
                height: 100
                Button:
                    text: "Info"
                    on_press: root.dispatch('on_show_info')
                Button:
                    text: "Zauber"
                    on_press: root.dispatch('on_show_spells')
                Button:
                    text: "Rast"
                    on_press: root.dispatch('on_show_rest')
                Button:
                    text: "Schaden w체rfeln"
                    on_press: root.dispatch('on_roll_damage')

            # Inventory & Equipment
            Label:
                text: "Inventar"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: inventory_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height

            Label:
                text: "Ausr체stung"
                font_size: '18sp'
                size_hint_y: None
                height: 30
            GridLayout:
                id: equipment_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height
