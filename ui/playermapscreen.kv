#:import MapGridWidget ui.custom_widgets.MapGridWidget

<PlayerMapScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Game Map"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        MapGridWidget:
            id: player_map_grid

        BoxLayout:
            size_hint_y: None
            height: 80
            spacing: 10
            orientation: 'horizontal'

            Label:
                id: turn_status_label
                text: "Am Zug: Niemand"
                font_size: '20sp'

            Button:
                id: end_turn_button
                text: "Runde beenden"
                on_press: root.end_turn()
                font_size: '20sp'
                disabled: True
                opacity: 0.5

        Button:
            id: interact_button
            text: "Interagieren"
            on_press: root.interact()
            size_hint_y: None
            height: 0
            opacity: 0
            disabled: True

        Button:
            text: "Zur√ºck zum Charakterbogen"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
