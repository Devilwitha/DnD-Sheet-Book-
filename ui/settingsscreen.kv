<SettingsScreen>:
    BoxLayout:
        id: settings_layout
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Einstellungen"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        BoxLayout:
            size_hint_y: None
            height: 40
            Label:
                text: "Hintergrund anzeigen"
            Switch:
                id: background_switch
                on_active: root.on_background_toggle(self.active)

        BoxLayout:
            size_hint_y: None
            height: 40
            Label:
                text: "Bildschirmtastatur an/aus"
            Switch:
                id: keyboard_switch
                on_active: root.on_keyboard_toggle(self.active)

        Button:
            text: "Hintergründe & Transparenz"
            on_press: app.change_screen('background_settings')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            id: wifi_button
            text: "Wifi"
            on_press: app.change_screen('wifi_settings')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            text: "Anpassungen (Farben)"
            on_press: app.change_screen('customization_settings')
            size_hint_y: None
            height: 80
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0 # Spacer

        Button:
            text: "Zurück"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
