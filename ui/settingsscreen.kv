<SettingsScreen>:
    BoxLayout:
        id: settings_layout
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Einstellungen"
            font_size: '30sp'
            size_hint_y: None
            height: 80

        Button:
            text: "Hintergründe"
            on_press: root.open_background_settings()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        Button:
            text: "Customization"
            on_press: root.open_customization_settings()
            size_hint_y: None
            height: 80
            font_size: '20sp'

        BoxLayout:
            size_hint_y: 1.0 # Spacer

        Button:
            text: "Zurück"
            on_press: root.go_back()
            size_hint_y: None
            height: 80
            font_size: '20sp'
